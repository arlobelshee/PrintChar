<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:PrintChar" xmlns:Views="clr-namespace:PrintChar.Templates.Anders.Views"
	x:Class="PrintChar.Templates.Anders.Views.CharStatsCard"
	d:DesignWidth="345" d:DesignHeight="250"
	d:DataContext="{d:DesignInstance local:CharacterDesignData, IsDesignTimeCreatable=True}">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/PrintChar;component/Templates/Anders/AndersResources.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot">
		<Views:AndersCard x:Name="Card" SubtitleText="{Binding SummaryLine}" TitleText="{Binding Name}" CardColor="{DynamicResource Special_Silver}" />
	</Grid>
</UserControl>
