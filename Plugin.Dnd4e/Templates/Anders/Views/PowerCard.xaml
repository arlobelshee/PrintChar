<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Plugin.Dnd4e"
	xmlns:Views="clr-namespace:Plugin.Dnd4e.Templates.Anders.Views"
	xmlns:ViewModels="clr-namespace:Plugin.Dnd4e.Templates.Anders.ViewModels"
	mc:Ignorable="d"
	x:Class="Plugin.Dnd4e.PowerCard"
	d:DesignWidth="345" d:DesignHeight="250"
	d:DataContext="{d:DesignInstance ViewModels:PowerDesignData, IsDesignTimeCreatable=True}">

	<Grid x:Name="LayoutRoot">
		<Views:AndersCard x:Name="Card" CardColor="{Binding CardColor, Mode=OneWay}" Foreground="White" SubtitleText="{Binding PowerCategorization, Mode=OneWay}" TitleText="{Binding Name}" TargetTypeIcon="{Binding TargetIcon, Mode=OneWay}" ActionTypeIcon="{Binding ActionIcon, Mode=OneWay}">
			<FlowDocumentScrollViewer Document="{Binding Description, Mode=OneWay}" Foreground="Black" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" />
		</Views:AndersCard>
	</Grid>
</UserControl>
